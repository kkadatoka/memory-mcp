{
  "name": "memory-mcp",
  "version": "1.1.0",
  "type": "module",
  "bin": {
    "memory-mcp": "./build/index.js"
  },
  "scripts": {
    "build": "tsc && for f in build/index.js build/cli.js; do [ -f \"$f\" ] && chmod 755 \"$f\" || true; done",
    "start": "node build/index.js",
    "typecheck": "tsc --noEmit",
    "smoke": "python3 scripts/test_discovery.py --url http://localhost:3000"
  },
  "files": [
    "build"
  ],
  "main": "index.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "MCP server for logging and retrieving memories",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.0",
    "mongodb": "^6.3.0",
    "zod": "^3.25.75",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
  "@types/express": "^4.17.21",
    "@types/cors": "^2.8.12",
    "typescript": "^5.8.3"
  }
}
